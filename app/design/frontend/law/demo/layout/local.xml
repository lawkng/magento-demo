<layout version="0.1.0">

	<default>
		<reference name="head">
			<action method="addItem"><type>skin_css</type><name>css/demo-style.css</name></action>
			
			<action method="addItem"><type>js</type><name>jquery/jquery-1.11.0.min.js</name></action>
			<action method="addItem"><type>js</type><name>jquery/jquery-migrate-1.2.1.min.js</name></action>
			<action method="addItem"><type>js</type><name>jquery/jquery.noconflict.js</name></action>
			<action method="addItem"><type>js</type><name>jquery/law-demo-main.js</name></action>
		</reference>
		
		<reference name="top.links">
			<remove name="wishlist_link"/>
		</reference>
		
		<remove name="left.newsletter" />
		<remove name="tags_popular"/>
	</default>
		
	<catalog_product_view>
		<reference name="product.info.additional">
			<action method="unsetChild"><name>product_tag_list</name></action>
		</reference>
	</catalog_product_view>
</layout>